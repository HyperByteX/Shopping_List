<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item >
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
    <gradient
        android:startColor="#33000000"
        android:endColor="#24000000"
        android:type="linear"
        android:angle="90"> 
    </gradient>
<corners
    android:radius="4dp"/>
</shape>
    </item>
    <item
        android:right="2dp"
        android:left="0.3dp"
        android:top="0.3dp"
        android:bottom="2.5dp">
        <shape 
            android:shape="rectangle">
        <solid
            android:color="#FFFF8F00"/>
        <corners
            android:radius="2dp"/>
        </shape>
    </item>
</layer-list>